function block(field) {
    field.focus()
    $(field).after("<span  style='color: red; float: left; margin-bottom: 20px; margin-top: 5px'>"+message+"</span>")
    $(field).css("border", "1px red solid")
    $(field).css("margin-bottom", "0")
}


function allFilled() {
    var filled = true;
    $(document.loginform.username, document.loginform.password).each(function() {
        if($(this).val() == '') filled = false;
    });
    return filled;
}